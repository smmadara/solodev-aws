{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_name": "solodev-single-aws-{{env `CODEBUILD_SOURCE_VERSION`}}"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "profile": "{{ user `aws_profile`}}",
        "instance_type": "t2.small",
        "ssh_username": "ec2-user",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "Packer Builder",
        "associate_public_ip_address": "true",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn2-ami*-ebs",
                "root-device-type": "ebs"
            },
            "owners": [],
            "most_recent": true
        }
    }],

    "provisioners": [
        {
            "type": "file",
            "source": "hashicorp/solodev-phpfpm-72/scripts",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "/tmp/Solodev",
            "destination": "/tmp/Solodev"
        },
        {
            "type": "shell",
            "inline": [
                "sudo chmod 700 /tmp/scripts/*",
                "sudo /tmp/scripts/install-base.sh",
                "sudo /tmp/scripts/install-httpd.sh",
                "sudo /tmp/scripts/install-phpfpm.sh",
                "sudo /tmp/scripts/install-node.sh",
                "sudo /tmp/scripts/install-mongo.sh",
                "sudo /tmp/scripts/configure-solodev.sh",
                "sudo /tmp/scripts/install-mysql.sh",
                "sudo /tmp/scripts/configure-single-ami.sh"
            ]
        },
        {
            "type": "shell",
            "inline": [
              "sudo rm .ssh/authorized_keys; sudo rm /root/.ssh/authorized_keys"
            ]
        }
    ]
}