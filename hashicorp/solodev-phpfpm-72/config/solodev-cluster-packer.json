{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_name": "solodev-cluster-aws-{{env `CODEBUILD_SOURCE_VERSION`}}"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "profile": "{{ user `aws_profile`}}",
        "instance_type": "t2.small",
        "ssh_username": "ec2-user",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "Packer Cluster Builder",
        "associate_public_ip_address": "true",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn2-ami*-ebs",
                "root-device-type": "ebs"
            },


            "owners": [],
            "most_recent": true
        },
        "launch_block_device_mappings": [
            {
              "device_name": "/dev/sda1",
              "volume_size": 50,
              "delete_on_termination": true
            }
        ],
        "ami_block_device_mappings": [
            {
                "device_name": "/dev/xvda1",
                "volume_size": 50,
                "delete_on_termination": true
            },
            {
             "device_name": "/dev/xvdb",
             "volume_size": 50,
             "delete_on_termination": true
            }
        ]
    }],

    "provisioners": [
        {
            "type": "file",
            "source": "hashicorp/solodev-phpfpm-72/scripts",
            "destination": "/tmp"
        },
        {
            "type": "file",
            "source": "/tmp/Solodev",
            "destination": "/tmp/Solodev"
        },
        {
            "type": "shell",
            "inline": [
              "mkfs.ext4 /dev/sdb",
              "echo '/dev/sdb /var/www/Solodev/clients/solodev ext4 defaults,auto,noexec 0 0'",
              "mount -a",
              "blockdev --setra 32 /dev/sdb",
              "/bin/dd if=/dev/zero of=/mnt/swapfile bs=1M count=2048",
              "chown root:root /mnt/swapfile",
              "chmod 600 /mnt/swapfile",
              "/sbin/mkswap /mnt/swapfile",
              "/sbin/swapon /mnt/swapfile"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "ls -al /tmp",
                "ls -al /tmp/Solodev",
                "sudo chmod 700 /tmp/scripts/*",
                "sudo /tmp/scripts/install-base.sh",
                "sudo /tmp/scripts/install-httpd.sh",
                "sudo /tmp/scripts/install-phpfpm.sh",
                "sudo /tmp/scripts/install-node.sh",
                "sudo /tmp/scripts/install-mongo.sh",
                "sudo /tmp/scripts/configure-solodev.sh"
            ]
        },
        {
            "type": "shell",
            "inline": [
              "sudo rm .ssh/authorized_keys; sudo rm /root/.ssh/authorized_keys"
            ]
        }
    ]
}